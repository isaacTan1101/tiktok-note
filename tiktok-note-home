    lazy var searchBar: UITextField = {
        var bar = UITextField()
        bar.frame = CGRect(x: 10, y: 0, width: searchSpacer.frame.width - 5, height: 30)
        bar.placeholder = "Search"
        bar.backgroundColor = .white
